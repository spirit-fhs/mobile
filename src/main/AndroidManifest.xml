<manifest package="org.unsane.spirit" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="7"></uses-sdk>
    <application android:debuggable="false" android:label="@string/app_name" android:icon="@drawable/logo_spirit_v03_hdpi" android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:label="@string/app_name" android:name="org.unsane.spirit.activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="org.unsane.spirit.activities.NewsSingle" android:configChanges="orientation|keyboard|keyboardHidden"/>
        <activity android:label="@string/app_name" android:name="org.unsane.spirit.activities.NewsMulti" android:configChanges="orientation|keyboard|keyboardHidden"/>
        <activity android:label="@string/app_name" android:name="org.unsane.spirit.activities.NewsCreate" android:screenOrientation="portrait"/>
        <activity android:label="@string/app_name" android:name="org.unsane.spirit.activities.Settings"/>
        <activity android:label="@string/app_name" android:name="org.unsane.spirit.activities.Info"/>
        <!--<service android:name=".SpiritService"/>-->
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>